<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="../tests/bootstrap.php" colors="true" processIsolation="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage>
    <include>
      <directory suffix=".php">../histou/</directory>
    </include>
    <exclude>
      <file>../histou/template/lambda.php</file>
      <file>../histou/bootstrap.php</file>
    </exclude>
    <report>
      <clover outputFile="../build/logs/clover.xml"/>
      <html outputDirectory="../build/logs/cover"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="basic">
      <directory suffix=".php">../tests/</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>
